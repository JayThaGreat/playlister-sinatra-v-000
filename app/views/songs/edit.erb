<h1>Update your song below</h1>

<form action="/songs/<%= @song.slug%>" method="POST">
  <input type="hidden" name="_method" value="PATCH">
  <label>Artist Name</label>

  <br></br>

  <input type="text" name="artist[name]" id="Artist Name" >

  <label>Song Name</label>
  
  <br></br>

  <input type="text" name="song[name]" id="Song Name">


  <%Genre.all.each do |genre|%>
    <input type="checkbox" name="genres[]" id="<%=genre.name %>" value="<%=genre.id%>"><%=genre.name%></input>
    <%end%>

  <br></br>
  <input type="submit" value="Save">
</form>